{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create": "node ./.template/create",
    "prepare": "husky install"
  },
  "dependencies": {
    "@svgr/webpack": "^6.2.1",
    "clsx": "^1.1.1",
    "modularscale-sass": "^3.0.10",
    "next": "^12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass": "^1.50.1"
  },
  "devDependencies": {
    "@p233/stylelint-config-scss": "^3.1.1",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.6",
    "eslint": "^8.14.0",
    "eslint-config-next": "^12.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.6.2",
    "stylelint": "^14.7.1",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c tsc",
      "eslint --fix --max-warnings 0"
    ],
    "!(package*).json": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}

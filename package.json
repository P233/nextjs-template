{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create": "node ./.template/create",
    "prepare": "husky install"
  },
  "dependencies": {
    "@svgr/webpack": "^7.0.0",
    "clsx": "^1.2.1",
    "next": "13.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.62.0"
  },
  "devDependencies": {
    "@p233/stylelint-config-scss": "^4.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "eslint": "^8.38.0",
    "eslint-config-next": "13.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.7",
    "stylelint": "^15.4.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c tsc",
      "eslint --fix --max-warnings 0"
    ],
    "!(package*).json": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}

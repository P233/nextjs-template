{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create": "node ./.template/create",
    "prepare": "husky install"
  },
  "dependencies": {
    "@svgr/webpack": "^6.5.0",
    "clsx": "^1.2.1",
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.55.0"
  },
  "devDependencies": {
    "@p233/stylelint-config-scss": "^3.2.1",
    "@types/node": "^18.11.2",
    "@types/react": "^18.0.21",
    "eslint": "^8.25.0",
    "eslint-config-next": "^12.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.18",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "stylelint": "^14.14.0",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c tsc",
      "eslint --fix --max-warnings 0"
    ],
    "!(package*).json": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}

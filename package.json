{
  "name": "nextjs-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "create": "node ./.template/create",
    "prepare": "husky install"
  },
  "dependencies": {
    "@svgr/webpack": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "clsx": "^2.0.0",
    "next": "13.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.4"
  },
  "devDependencies": {
    "@p233/stylelint-config-scss": "^4.0.1",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.29",
    "eslint": "^8.51.0",
    "eslint-config-next": "13.5.6",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "postcss": "^8.4.31",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bash -c tsc",
      "eslint --fix --max-warnings 0"
    ],
    "!(package*).json": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
